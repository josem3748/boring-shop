<html lang="en">
  <%- include('./partials/head'); %>
  <body style="background-color: lightgray">
    <%- include('./partials/header'); %>
    <div class="container">
      <br />
      <h1>Chat de soporte</h1>
      <% if (user) { %>
      <p>Escribe aquí tus consultas</p>
      <form>
        <input type="hidden" id="username" value="<%= user.address %>" />
        <input type="hidden" id="isadmin" value="<%= user.isadmin %>" />
        <div id="mensajes"></div>
        <br />
        <input
          style="width: 100%"
          type="text"
          id="texto"
          placeholder="Cuéntanos algo..."
        />
        <input onclick="return addMessage(this)" type="button" value="Enviar" />
        <% if (user.isadmin) { %>
        <br />
        <br />
        <input
          style="width: 100%"
          type="text"
          id="response"
          placeholder="Responder a... (Dejar vacío para mensaje público. Escribir email para responder privado. Ej: test@gmail.com)"
        />
        <% }; %>
      </form>
      <% } else { %>
      <p>There is no data yet.</p>
      <% }; %>
    </div>
    <%- include('./partials/footer'); %>
  </body>
</html>
