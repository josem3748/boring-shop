head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  title Document
.container
  // Content here
  br
  h1 Products View
  if body.length > 0
    table.table(style='background-color: black; color: white;')
      thead
        tr
          th(scope='col') Name
          th(scope='col') Price
          th(scope='col') Picture
      tbody(style='color: gray')
        each elem in body
          tr
            td(style='color: white;')=elem.title
            td(style='color: white;')=elem.price
            td
              img(src=elem.thumbnail)
    br
    form(action='/borrado' method='post')
      button.btn.btn-danger(type='submit') Delete all
  else
    p There is no data yet.
  br
  a.btn.btn-secondary(href='/') Add Products