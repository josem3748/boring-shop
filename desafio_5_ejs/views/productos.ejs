<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <title>Document</title>
  </head>
  <body style="background-color: lightgray">
    <div class="container">
      <!-- Content here -->
      <br />
      <h1>Products View</h1>
      <% if (!body || body.length < 1) { %>
      <p>There is no data yet.</p>
      <% } else { %>
      <table class="table" style="background-color: black; color: white">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Picture</th>
          </tr>
        </thead>
        <tbody style="color: gray">
          <% body.forEach( (elem) => { %>
          <tr>
            <td style="color: white"><%= elem.title %></td>
            <td style="color: white"><%= elem.price %></td>
            <td><img src="<%= elem.thumbnail %>" /></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <br />
      <form action="/borrado" method="post">
        <button type="submit" class="btn btn-danger">Delete all</button>
      </form>
      <% }; %>
      <br />
      <a href="/" class="btn btn-secondary">Add Products</a>
    </div>
  </body>
</html>
